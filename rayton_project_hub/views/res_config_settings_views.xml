<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_rayton" model="ir.ui.view">
        <field name="name">res.config.settings.view.rayton.project.hub</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.action_general_configuration"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Rayton Project Hub" string="Rayton Project Hub" data-key="rayton_project_hub">
                    <h2>Rayton: Ініціація проекту</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="tg_bot_token">Telegram Bot Token</label>
                                <div class="text-muted">
                                    Токен бота для надсилання повідомлень з Discuss у Telegram групи проектів.
                                    Отримати у <a href="https://t.me/BotFather" target="_blank">@BotFather</a>.
                                </div>
                                <div class="content-group mt8">
                                    <field name="tg_bot_token"
                                           password="True"
                                           placeholder="1234567890:AABBccDDeeFFggHHiiJJ..."/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

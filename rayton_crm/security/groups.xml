<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_operator" model="res.groups">
        <field name="name">Оператор КЦ</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
        <field name="implied_ids" eval="[(4, ref('crm.group_crm_salesman'))]"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Менеджер з продажу</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
        <field name="implied_ids" eval="[(4, ref('crm.group_crm_salesman'))]"/>
    </record>

    <record id="group_credit" model="res.groups">
        <field name="name">Кредитний спеціаліст</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
        <field name="implied_ids" eval="[(4, ref('crm.group_crm_salesman'))]"/>
    </record>

    <record id="group_kc_head" model="res.groups">
        <field name="name">Керівник КЦ</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
        <field name="implied_ids" eval="[
            (4, ref('rayton_crm.group_operator')),
            (4, ref('crm.group_crm_manager')),
        ]"/>
    </record>
</odoo>

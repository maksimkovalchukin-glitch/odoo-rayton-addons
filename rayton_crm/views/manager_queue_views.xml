<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_manager_queue_list" model="ir.ui.view">
        <field name="name">rayton.manager.queue.list</field>
        <field name="model">rayton.manager.queue</field>
        <field name="arch" type="xml">
            <list editable="top" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="user_id"/>
                <field name="is_paused"/>
                <field name="leads_count"/>
                <field name="last_assigned"/>
            </list>
        </field>
    </record>

    <record id="action_manager_queue" model="ir.actions.act_window">
        <field name="name">Черга менеджерів</field>
        <field name="res_model">rayton.manager.queue</field>
        <field name="view_mode">list</field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Окремий list view для res.partner.phone -->
    <record id="view_partner_phone_list" model="ir.ui.view">
        <field name="name">res.partner.phone.list</field>
        <field name="model">res.partner.phone</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="phone_type" string="Тип"/>
                <field name="phone" string="Номер"/>
                <field name="is_primary" string="Основний"/>
            </tree>
        </field>
    </record>

    <!-- Форма: замінюємо phone/mobile на таблицю телефонів -->
    <record id="view_partner_form_phones" model="ir.ui.view">
        <field name="name">res.partner.form.phones</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="before">
                <field name="phone_ids" string="Телефони" nolabel="1" colspan="2"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>

    <!-- Список контактів у вкладці ліда/нагоди CRM -->
    <record id="view_partner_contact_in_lead" model="ir.ui.view">
        <field name="name">res.partner.contact.in.lead.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="function" string="Посада"/>
                <field name="primary_phone" string="Телефон"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Вкладка Rayton — перша, перед "Контакти та адреси" -->
    <record id="view_partner_form_rayton" model="ir.ui.view">
        <field name="name">res.partner.form.rayton</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='contact_addresses']" position="before">
                <page string="Rayton" name="rayton_info">
                    <group string="Ідентифікація">
                        <field name="kved_name" string="КВЕД (назва)"/>
                        <field name="director_name" string="Керівник"/>
                        <field name="resource_link" string="Посилання з ресурсу" widget="url"/>
                    </group>
                    <group string="Класифікація">
                        <field name="client_status" string="Статус клієнта"/>
                        <field name="lead_temp" string="Температура ліда"/>
                        <field name="partner_source" string="Джерело"/>
                    </group>
                    <group string="Проект">
                        <field name="consumption_mwh" string="Споживання, МВт·год/міс"/>
                        <field name="uze_proposal" string="Пропозиція УЗЕ"/>
                    </group>
                </page>
            </xpath>
            <!-- Ховаємо "Контакти та адреси" для фізичних осіб -->
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="invisible">not is_company</attribute>
            </xpath>
        </field>
    </record>

    <!-- Діалог "Відкрити: Контакт" (sub-contact quick-edit) — додаємо phone_ids -->
    <record id="view_partner_address_form_phones" model="ir.ui.view">
        <field name="name">res.partner.address.form.phones</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_address_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="before">
                <field name="phone_ids" string="Телефони" nolabel="1" colspan="2"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>

    <!-- Список партнерів — primary_phone замість phone/mobile -->
    <record id="view_partner_list_phones" model="ir.ui.view">
        <field name="name">res.partner.list.phones</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="replace">
                <field name="primary_phone" string="Телефон" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="replace"/>
        </field>
    </record>
</odoo>
